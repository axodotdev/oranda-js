{
  "name": "oranda",
  "description": "Create beautiful and simple HTML pages from your Readme.md files",
  "version": "0.10.0",
  "bin": {
    "oranda": "bin/oranda.js"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.{js,scss}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "./bin/oranda.js",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "now-build": "npm run build",
    "serve": "npx serve -l 3021",
    "watch": "nodemon -e js,md,scss --ignore public/ --ignore node_modules/ ./bin/oranda.js",
    "dev": "run-p serve watch"
  },
  "files": [
    "LICENSE",
    "Readme.md",
    "bin",
    "src"
  ],
  "keywords": [
    "generation",
    "markdown",
    "static",
    "sites",
    "oranda"
  ],
  "author": {
    "name": "Sara Vieira",
    "email": "hey@iamsaravieira.com",
    "url": "https://iamsaravieira.com/"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^0.27.2",
    "clean-css": "^5.3.1",
    "create-html": "^4.1.0",
    "gh-pages": "^4.0.0",
    "gluegun": "5.1.2",
    "imagemin": "^8.0.1",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-pngquant": "^9.0.2",
    "jpegtran": "^2.0.0",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "8.6.5",
    "markdown-it-checkbox": "^1.1.0",
    "markdown-it-emoji": "^2.0.2",
    "markdown-it-for-inline": "^0.1.1",
    "markdown-it-github-headings": "^2.0.1",
    "markdown-it-inline-comments": "^1.0.1",
    "markdown-it-shiki": "^0.5.1",
    "markdownlint": "^0.26.2",
    "node-sass": "^7.0.3",
    "normalize.css": "^8.0.1",
    "snarkdown": "^2.0.0",
    "to-css": "^1.2.1"
  },
  "devDependencies": {
    "all-contributors-cli": "^6.20.4",
    "eslint": "^8.23.1",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.1",
    "jest": "^29.0.3",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "homepage": "https://github.com/axodotdev/oranda",
  "bugs": {
    "url": "https://github.com/axodotdev/oranda/issues",
    "email": "hey@iamsaravieira.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/axodotdev/oranda"
  }
}
